#:kivy 1.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

Screens:
    transition: FadeTransition()
    IntroScreen:
    NonExistingPeopleScreen:
    FakePersonAnswerScreen:
    CameraAndPlaybackScreen:
    VideoScreen:

<IntroScreen>:
    name: 'intro'
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'images/banner.gif'
        Label:
            text: 'Her kommer der intro text'
        ButtonRow:
            yellow_button: 'Lad os komme igang!'

<NonExistingPeopleScreen>:
    name: 'persons'
    on_kv_post: self.setup_persons()
    BoxLayout:
        orientation: 'vertical'
        id: persons_box
        Image:
            source: 'images/persons.png'
        Label:
            text: 'Du vil nu få vist nogle forskellige mennesker.\nHvad er ligheden mellem dem?\nTryk på en af svarknapperne.'
        BoxLayout:
            id: fake_row
        ButtonRow:
            yellow_button: 'Videre!'
            blue_button: 'De er alle berømte'
            black_button: 'De deltager på lejren'
            white_button: 'De findes ikke i virkeligheden'

<FakePersonAnswerScreen>:
    name:'fake_answer'
    id: answer_screen
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'images/correct.png' if answer_screen.correct else 'images/wrong.png'
        Label:
            text: 'Det er helt rigtigt!' if answer_screen.correct else 'Det er desværre forkert!'
        Label:
            text: 'Alle de portrætter, du så, er lavet med kunstig intelligens. Man har oplært en kunstig intelligens i, hvordan et menneskes ansigt ser ud. Så kan man bede om at der bliver laavet lignende ansigter.'
        ButtonRow:
            yellow_button: 'Lad os komme videre'

<CameraAndPlaybackScreen>:
    name: 'camfun'
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'images/avatar.png'
        GridLayout:
            cols: 2
            Image:
                id: camera
            Image:
                id: avatar
        ButtonRow:
            yellow_button: 'Lad os komme videre'
            blue_button: 'Kalibrer billedet'
            black_button: 'Næste Avatar'
            white_button: 'Forrige Avatar'

<VideoScreen>:
    name: 'videos'
    id: container
    on_enter: player.state = 'play'
    on_leave: player.state = 'stop'
    on_idx: player.state = 'play'
    BoxLayout:
        orientation: 'vertical'
        Image:
            size_hint: (1, 0.2)
            source: 'images/videos.png'
        VideoPlayer:
            id: player
            size_hint: (1, 0.4)
            source: container.videos[container.idx]
            state: 'stop'
        Label:
            size_hint: (1, 0.1)
            text: 'Alle videoer der vises her er lavet med Vocodes. For at lave dine egne, så besøg www.vocodes.com'
        ButtonRow:
            yellow_button: 'Lad os komme videre'
            black_button: 'Næste video'
            white_button: 'Forrige video'
